<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Soft snowy white circle -->
    <solid android:color="@color/snowWhite" />

    <!-- Festive candy-cane red border -->
    <stroke
        android:width="3dp"
        android:color="@color/hollyRed" />

    <!-- Slight drop shadow glow -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

    <size
        android:width="48dp"
        android:height="48dp" />

</shape>
