<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4EE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Configuration"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:textColor="#B00020"/>

    <EditText
        android:id="@+id/etConfigKey"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:hint="Config Key"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/etConfigValue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_input"
        android:padding="16dp"
        android:hint="Config Value"
        android:layout_marginTop="12dp"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btnSaveConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Config"
        android:textColor="@android:color/white"
        android:backgroundTint="#C62828"
        android:layout_marginTop="20dp"/>

</LinearLayout>
