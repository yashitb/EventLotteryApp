<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Title (unchanged text) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp" />

        <!-- Festive card container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <!-- Buttons â€“ SAME TEXT, just tinted red/green -->

            <Button
                android:id="@+id/btnAdminManageEvents"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Manage Events"
                android:textColor="@android:color/white"
                android:backgroundTint="#B22222" />

            <Button
                android:id="@+id/btnAdminManageUsers"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Manage Profiles"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#0B8F1D" />

            <Button
                android:id="@+id/btnAdminManageImages"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Browse Images"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#B22222" />

            <Button
                android:id="@+id/btnAdminRemoveOrganizers"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Remove Organizers"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#0B8F1D" />

            <Button
                android:id="@+id/btnAdminNotificationLogs"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Notification Logs"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#B22222" />

            <Button
                android:id="@+id/btnAdminSystemConfig"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="System Config"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/white"
                android:backgroundTint="#0B8F1D" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
