<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    tools:context=".OrganizerLandingFragment">

    <!-- Top Christmas AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C62828"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- App name (kept same text) -->
            <TextView
                android:id="@+id/AppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tappit"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

            <!-- Explore (little green accent) -->
            <ImageButton
                android:id="@+id/btnExplore"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Explore"
                app:tint="#FFEE58"
                android:src="@drawable/explore_events" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Create Event (festive green button) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateEventTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Event"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    style="@style/Widget.Material3.Button"
                    app:backgroundTint="#2E7D32"
                    app:strokeWidth="1dp"
                    app:strokeColor="#FFEB3B" />

                <!-- Notifications bell with gold tint -->
                <ImageButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Notifications"
                    android:src="@drawable/notification_icon"
                    app:tint="#FFEB3B" />

                <!-- Profile avatar with little wreath circle bg -->
                <ImageView
                    android:id="@+id/btnProfile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:padding="4dp"
                    android:src="@drawable/profile_icon"
                    android:background="@drawable/profile_avatar_circle"
                    android:contentDescription="Profile" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scroll content under app bar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header row: "Events" + Upcoming/Past toggle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="75dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Events"
                    android:textColor="#C62828"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUpcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upcoming"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="#C62828"
                        app:strokeWidth="1dp"
                        app:backgroundTint="#FFFFFFFF"
                        android:textColor="#C62828" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Past"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="#2E7D32"
                        app:strokeWidth="1dp"
                        app:backgroundTint="#FFFFFFFF"
                        android:textColor="#2E7D32" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>

            <!-- Events content / empty state -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp">

                <!-- Empty state (snowy card vibe, same text) -->
                <LinearLayout
                    android:id="@+id/emptyStateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="48dp"
                    android:background="#80FFFFFF"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/empty_calender"
                        app:tint="#C62828"
                        android:alpha="0.85"
                        android:contentDescription="No events" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="No Events"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="This calendar has no upcoming events."
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddEventEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="+ Add Event"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="#C62828"
                        app:strokeWidth="1dp"
                        app:backgroundTint="#FFFFFFFF"
                        android:textColor="#C62828" />
                </LinearLayout>

                <!-- Events list -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating add button - red with white plus -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Add Event"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/appBarLayout"
        app:srcCompat="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="#C62828" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
