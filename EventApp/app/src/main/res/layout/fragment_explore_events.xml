<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#C62828"
            android:gravity="bottom"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btnBackExplore"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/titleExplore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore Events"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- CATEGORY TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browse by Category"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B71C1C"
            android:paddingStart="20dp"
            android:paddingTop="30dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/catEntertainment"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:background="@drawable/category_box_round"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entertainment"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catSports"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:background="@drawable/category_box_round"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catTechnology"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:background="@drawable/category_box_round"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technology"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catHealth"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:background="@drawable/category_box_round"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/catOthers"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_columnWeight="1"
                android:background="@drawable/category_box_round"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>
