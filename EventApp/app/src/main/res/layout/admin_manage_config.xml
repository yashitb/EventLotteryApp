<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF5E9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit System Configuration"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#8B0000" />

    <EditText
        android:id="@+id/etConfigKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Config Key"
        android:layout_marginTop="20dp"
        android:textColorHint="#8B0000"
        android:background="@drawable/rounded_input" />

    <EditText
        android:id="@+id/etConfigValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Config Value"
        android:layout_marginTop="12dp"
        android:textColorHint="#8B0000"
        android:background="@drawable/rounded_input" />

    <Button
        android:id="@+id/btnSaveConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="20dp"
        android:backgroundTint="#B22222"
        android:textColor="@android:color/white" />

</LinearLayout>
